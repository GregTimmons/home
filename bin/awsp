#!/usr/bin/env bash
. ~/bin/select_options.sh
function awsp(){
    VALUE=$1
    if [ -z "$VALUE" ]; then 
        OPTIONS_STRING=$(cat ~/.aws/config | grep profile | awk '{print $2}' | sed -s 's/\]//')
        readarray -t OPTIONS <<<"${OPTIONS_STRING}"
        select_option "${OPTIONS[@]}"
        CHOICE=$?
        VALUE=${OPTIONS[$CHOICE]}
    fi
    export AWS_PROFILE=$VALUE
}
